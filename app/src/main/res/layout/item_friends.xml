<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_friend_card_view_height"
    android:id="@+id/friend_item_card_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_friend_layout_height"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_friend"
                android:layout_width="@dimen/item_friend_user_image_height_width"
                android:layout_height="@dimen/item_friend_user_image_height_width"
                android:src="@drawable/profile_image"
                android:layout_gravity="center"
                android:layout_margin="@dimen/item_friend_image_margin"
                />

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/friend_name"
                android:textColor="@color/black"
                android:textSize="@dimen/item_friend_text_size"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/favorite_friend"
                android:layout_width="@dimen/item_friend_image_height_width"
                android:layout_height="@dimen/item_friend_image_height_width"
                android:src="@drawable/ic_star_black_24dp"
                android:layout_marginStart="@dimen/item_friend_image_margin"
                android:layout_marginEnd="@dimen/item_friend_image_margin"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/accepted_image_friend"
                android:layout_width="@dimen/item_friend_image_height_width"
                android:layout_height="@dimen/item_friend_image_height_width"
                android:src="@drawable/user_accepted"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/item_friend_image_margin"
                android:layout_marginEnd="@dimen/item_friend_image_margin"
                />

            <ImageView
                android:id="@+id/add_image_friend"
                android:layout_width="@dimen/item_friend_image_height_width"
                android:layout_height="@dimen/item_friend_image_height_width"
                android:src="@drawable/ic_friend_add_24dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/item_friend_add_image_margin_left"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_friend_line_height"
            android:background="#A1BEBABA"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>